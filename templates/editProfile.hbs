<!doctype html>
<html lang="en">
  <head>
        <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>shoes Store | WELCOME</title>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
   
<style>
    *{
        font-family: 'Roboto Condensed', sans-serif;
    }
</style>
   
  </head>
  
  <body>
   



      <div class="d-flex" role="search">
       
      </div>
      


<!-- -->


<div class="container mt-5">
  <div class="row">

    <div class="col-sm-4">
      <input type="text" class="form-control shadow-none" value="{{dataProfile.profileName}}" id="pName" style="margin-top:10px;">
      <input type="text" class="form-control shadow-none" value="{{dataProfile.profileEmail}}" id="pEmail" style="margin-top:10px;">
      
      <input type="text" class="form-control shadow-none" value="{{dataProfile.profileAddress}}" id="pAddress" style="margin-top:10px;">
       <button class="btn btn-outline-success" id="saveit" style="margin-top:10px;">Save</button>
      <h3 class="mt-4">Skills</h3>
      <input type="text" class="form-control shadow-none" id="getSkill">
      <button class="btn btn-outline-success" id="addSkill" style="margin-top:10px;">Add Skills</button>
        <table  class="table" style="text-align: left;margin-top:10px">
            {{#each dataProfile.profileSkills}}
            <tr>
                <td> <p>{{this.skills}}</p></td>
                <td><button onclick="deleteItem('{{this._id}}')" class="btn btn-outline-danger" >Delete</button></td>
            </tr>
            {{/each}}
        </table>
      <hr class="d-sm-none">
    </div>





    <div class="col-sm-8">
      <h2>EDUCATIONAL QUALIFICATIONS</h2>
      <input type="text" class="form-control shadow-none" placeholder="Qualification" id="quali">
      <input type="text" class="form-control shadow-none" placeholder="School/College" id="school" style="margin-top:10px;">
      <input type="text" class="form-control shadow-none" placeholder="Board/University"  id="board" style="margin-top:10px;">
      <input type="text" class="form-control shadow-none" placeholder="CGPA/Percentage" id="cgpa" style="margin-top:10px;">
      <input type="text" class="form-control shadow-none" placeholder="Session Year" id="year" style="margin-top:10px;">
      <button class="btn btn-outline-success" id="addQualification" style="margin-top:10px;" >Add Qualification</button>
       
        <table class="table" style="text-align: left;margin-top:10px">
          <thead>
            <tr>
              <th scope="col">Qualification</th>
              <th scope="col">School/College</th>
              <th scope="col">Board/University</th>
              <th scope="col">CGPA/Per</th>
              <th scope="col">Year</th>
            </tr>
          </thead>
          {{#each dataProfile.profileQualifications}}
          <tbody>
            <tr>
              <th scope="row">{{this.qualificationType}}</th>
              <td>{{this.school}}</td>
              <td>{{this.board}}</td>
              <td>{{this.cgpa}}</td>
              <td>{{this.year}}</td>
              <td><button class="btn btn-outline-danger" onclick="deleteQualificationItem('{{this._id}}')">Delete</button></td>
            </tr>
          </tbody>
          {{/each}}
    </table>
 
      <h2>ACADEMIC & CO-CURRICULAR ACHIEVEMENTS</h2>
      <input type="text" class="form-control shadow-none" placeholder="Achievements" id="inputAchievement" style="width: 280px;"  >
      <button id="addAchievement" class="btn btn-outline-success" style="margin-top:10px;">Add Achievements</button>
        <table class="table" style="text-align: left;">
           {{#each dataProfile.profileAchievement}}
          <tbody>
            <tr>
              <td scope="row">{{this.Achievement}}</td>
              <td><button class="btn btn-outline-danger" onclick="deleteAchievementItem('{{this._id}}')">Delete</button></td>
            </tr>
          </tbody>
          {{/each}}
       </table>
    


    <h2>Projects</h2>
        <input type="text" class="form-control shadow-none" placeholder="Projects" id="inputProjects" style="width: 280px;" >
      <button id="addProjects" class="btn btn-outline-success" style="margin-top:10px;" >Add Projects</button>
        <table class="table" style="text-align: left;">
           {{#each dataProfile.profileProjects}}
          <tbody>
            <tr>
              <td scope="row">{{this.projects}}</td>
              <td><button class="btn btn-outline-danger" onclick="deleteProjectsItem('{{this._id}}')">Delete</button></td>
            </tr>
          </tbody>
          {{/each}}
       </table>
    </table>

    <h2>Extra-Curriculam Activities</h2>
     <input type="text" class="form-control shadow-none" placeholder="Extra curricular Activities" id="inputActivities" style="width: 280px;" >
      <button id="addActivities" class="btn btn-outline-success" style="margin-top:10px;" >Add Activities</button>
        <table class="table" style="text-align: left;">
          {{#each dataProfile.profileActivities}}
          <tbody>
            <tr>
              <td scope="row">{{this.activities}}</td>
              <td><button class="btn btn-outline-danger" onclick="deleteActivityItem('{{this._id}}')">Delete</button></td>
            </tr>
          </tbody>
          {{/each}}
    </table>



    </div>

  </div>
</div>


</br>
  <script type="text/javascript" src="/editPassing.js"></script>

   </body>
</html>
